---
apiVersion: v1
kind: Pod
metadata:
  name: pod1
  labels:
    env: dev
spec:
  containers:
    - name: cont1
      image: nginx
      ports:
        - containerPort: 80

------------------------------------------------------------------------------------------
apiVersion: v1
kind: Service
metadata:
  name: svc
spec:
  type: NodePort
  selector:
     env: dev
  ports:
    - port: 80
      targetPort: 80
